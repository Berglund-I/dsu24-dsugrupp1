@section CenterContentOne {
    <h2>Statistik från DeSo områden i kommunen</h2>
  <div class="deSo-container">      
    <div class="left-div">
        @Html.DropDownListFor(d => d.DeSoDropDown.SelectedDeso, Model.DeSoDropDown.DeSos, "Välj ett område", new { @id = "left-deSo-dropdown" })
        <div id="left-deSo-statistics">
            
        </div>
        <div class="charts">
            <canvas id="left-deSo-chart"></canvas>
        </div>
        
    </div>

    <div class="right-div">
        @Html.DropDownListFor(d => d.DeSoDropDown.SelectedDeso, Model.DeSoDropDown.DeSos, "Välj ett område", new { @id = "right-deSo-dropdown" })
        <div id="right-deSo-statistics">
            
        </div>
        <div class="charts">
            <canvas id="right-deSo-chart"></canvas>
        </div>
        
    </div>
    </div>
    

}
@section CenterContentTwo {

}
@section CenterContentThree {
    <h4>Filtrering</h4>

    <div class="filters">
        @Html.DropDownListFor(d => d.DeSoDropDown.SelectedDeso, Model.DeSoDropDown.DeSos, "Välj Batch-nummer")
        @Html.DropDownListFor(d => d.DeSoDropDown.SelectedDeso, Model.DeSoDropDown.DeSos, "Välj vaccintyp")
        @Html.DropDownListFor(d => d.DeSoDropDown.SelectedDeso, Model.DeSoDropDown.DeSos, "Välj vaccinationscentral")

        <p>Åldersintervall (Slider)</p>

        <div class="genderbox">
            <label>Man
                <input type="checkbox" name="GenderMale" value="true" @(Model.GenderMale ? "checked=\"checked\"" : "")>
                <span class ="checkmark"></span>
            </label>
        </div>
        <div class="genderbox">
            <label>Kvinna
                <input type="checkbox" name="GenderFemale" value="true" @(Model.GenderFemale ? "checked=\"checked\"" : "")>
                <span class="checkmark"></span>
            </label>
        </div>

       @*  @Html.CheckBoxFor(x => x.GenderMale)
        @Html.CheckBoxFor(x => x.GenderFemale) *@
    </div>
}
