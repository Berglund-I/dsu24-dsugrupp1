@{
    ViewData["Title"] = "Home Page";
}

@section LeftContent {
    @await Component.InvokeAsync("Chart","1")
}

@section RightContent {
    <div class = "chart-container" width ="600" heigth="400">
        <canvas id="myChart2"></canvas>
    </div>
